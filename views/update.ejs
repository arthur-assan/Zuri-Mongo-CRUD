<%- include("./partials/header")  %>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo App</a>
</nav>
<div class="container my-5">
<form id="updateForm" method="POST" action="/update/<%=todo._id%>">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="form-control" value="<%= todo.title %>">
    </div>

    <div class="form-group ">
        <label for="description">Description</label>
        <input type="text" name="description" id="description" class="form-control" value="<%= todo.description %>">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
</div>
<%- include("./partials/footer")  %>